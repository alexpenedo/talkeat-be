{
  "testURL": "http://localhost",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "tests/.*\\.test.ts$",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/coverage/**"
  ],
  "coverageReporters": [
    "json",
    "lcov"
  ]
}